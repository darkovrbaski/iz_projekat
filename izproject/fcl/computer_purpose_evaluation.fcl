FUNCTION_BLOCK computer_purpose_evaluation	// Block definition (there may be more than one block per file)

VAR_INPUT				// Define input variables
	number_of_cores : REAL;
END_VAR

VAR_OUTPUT				// Define output variable
	home_use : REAL;
END_VAR

FUZZIFY number_of_cores
	TERM low := (1,1) (2,1) (4,0);
	TERM middle := (2,0) (6,1) (8,0);
	TERM high := (6,0) (12,1) (32,0);
	TERM very_high := (16,0) (128,1);
END_FUZZIFY

DEFUZZIFY home_use
	TERM low := (-0.5,0) (0,1) (0.5,0);
	TERM high := (0.5,0) (1,1) (1.5,0);
	METHOD : COG;		// Use 'Center Of Gravity' defuzzification method
	DEFAULT := 0;		// Default value is 0 (if no rule activates defuzzifier)
END_DEFUZZIFY

RULEBLOCK No1
	AND : MIN;			// Use 'min' for 'and' (also implicit use 'max' for 'or' to fulfill DeMorgan's Law)
	ACT : MIN;			// Use 'min' activation method
	ACCU : MAX;			// Use 'max' accumulation method

	RULE 1 : IF number_of_cores IS low THEN home_use IS high;
	RULE 2 : IF number_of_cores IS middle THEN home_use IS high;
	RULE 3 : IF number_of_cores IS high THEN home_use IS high;
	RULE 4 : IF number_of_cores IS very_high THEN home_use IS low;
END_RULEBLOCK

END_FUNCTION_BLOCK
