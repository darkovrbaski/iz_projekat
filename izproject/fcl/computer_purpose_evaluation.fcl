	v_ram_size : REAL;
END_VAR

VAR_OUTPUT				// Define output variable
	home_use : REAL;
	gaming : REAL;
	mining : REAL;
	hosting : REAL;
END_VAR

FUZZIFY number_of_cores
	TERM low := (1,1) (2,1) (4,0);
	TERM middle := (2,0) (6,1) (8,0);
	TERM high := (6,0) (12,1) (32,0);
	TERM very_high := (16,0) (128,1);
END_FUZZIFY

FUZZIFY single_core_clock
	TERM low := (1.0,1) (2.0,1) (3.0,0);
	TERM middle := (2.5,0) (3.5,1) (4.5,0);
	TERM high := (4.2,0) (6.0,1);
END_FUZZIFY

FUZZIFY ram_size
	TERM low := (1,1) (4,1) (6,0);
	TERM middle := (5,0) (8,1) (12,0);
	TERM high := (10,0) (16,1) (32,0);
	TERM very_high := (28,0) (128,1);
