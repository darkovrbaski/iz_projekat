DEFUZZIFY home_use
	TERM low := (-0.5,0) (0,1) (0.5,0);
	TERM high := (0.5,0) (1,1) (1.5,0);
	METHOD : COG;		// Use 'Center Of Gravity' defuzzification method
	DEFAULT := 0;		// Default value is 0 (if no rule activates defuzzifier)
END_DEFUZZIFY

DEFUZZIFY gaming
	TERM low := (-0.5,0) (0,1) (0.5,0);
	TERM high := (0.5,0) (1,1) (1.5,0);
	METHOD : COG;
	DEFAULT := 0;
END_DEFUZZIFY

DEFUZZIFY mining
	TERM low := (-0.5,0) (0,1) (0.5,0);
	TERM high := (0.5,0) (1,1) (1.5,0);
	METHOD : COG;
	DEFAULT := 0;
END_DEFUZZIFY

DEFUZZIFY hosting
	TERM low := (-0.5,0) (0,1) (0.5,0);
	TERM high := (0.5,0) (1,1) (1.5,0);
	METHOD : COG;
	DEFAULT := 0;
END_DEFUZZIFY

RULEBLOCK No1
	AND : MIN;			// Use 'min' for 'and' (also implicit use 'max' for 'or' to fulfill DeMorgan's Law)
	ACT : MIN;			// Use 'min' activation method
	ACCU : MAX;			// Use 'max' accumulation method

	RULE 1 : IF number_of_cores IS low THEN gaming IS low;
	RULE 2 : IF number_of_cores IS low THEN mining IS low;
	RULE 3 : IF number_of_cores IS low THEN hosting IS low;
	
	RULE 4 : IF single_core_clock IS low THEN gaming IS low;
	RULE 5 : IF single_core_clock IS low THEN mining IS low;
	RULE 6 : IF single_core_clock IS low THEN hosting IS low;

	RULE 7 : IF ram_size IS low THEN gaming IS low;
	RULE 8 : IF ram_size IS low THEN mining IS low;
	RULE 9 : IF ram_size IS low THEN hosting IS low;	
	
	RULE 10 : IF v_ram_size IS low THEN gaming IS low;
	RULE 11 : IF v_ram_size IS low THEN mining IS low;
	

END_RULEBLOCK

END_FUNCTION_BLOCK
